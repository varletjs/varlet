{
  "name": "@varlet/ui",
  "version": "0.0.0",
  "description": "A components library example",
  "main": "lib/index.js",
  "module": "es/index.js",
  "typings": "types/index.d.ts",
  "vetur": {
    "tags": "highlight/tags.json",
    "attributes": "highlight/attributes.json"
  },
  "web-types": "highlight/web-types.json",
  "keywords": [
    "Vue",
    "UI"
  ],
  "license": "MIT",
  "sideEffects": [
    "es/**/style/*",
    "lib/**/style/*",
    "es/style.js",
    "es/less.js",
    "lib/style.js",
    "lib/less.js",
    "*.css",
    "*.less"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "varlet-cli dev",
    "build": "varlet-cli build",
    "preview": "varlet-cli preview",
    "compile": "varlet-cli compile",
    "lint": "varlet-cli lint",
    "changelog": "varlet-cli changelog",
    "release": "pnpm compile && varlet-cli release",
    "test": "varlet-cli jest",
    "test:watch": "varlet-cli jest -w",
    "test:watchAll": "varlet-cli jest -wa",
    "create": "varlet-cli create"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@varlet/cli": "workspace:*",
    "@varlet/eslint-config": "workspace:*",
    "@varlet/icons": "workspace:*",
    "@varlet/stylelint-config": "workspace:*",
    "@varlet/touch-emulator": "workspace:*",
    "@varlet/shared": "workspace:*",
    "@vue/test-utils": "^2.0.2",
    "clipboard": "^2.0.6",
    "eslint": "^7.30.0",
    "lint-staged": "^10.5.0",
    "live-server": "^1.2.1",
    "lodash-es": "^4.17.21",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.8.0",
    "stylelint": "^13.13.1",
    "typescript": "^4.4.4",
    "vue": "3.2.25",
    "vue-router": "4.0.12"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue,less}": "prettier --write",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,less}": "stylelint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --allow-empty --concurrent false",
    "commit-msg": "npx --no-install varlet-cli commit-lint $1"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "public/**",
      "src/*/__tests__/**",
      "coverage/**",
      "highlight/**",
      "types/index.d.ts",
      ".varlet/**"
    ],
    "extends": [
      "@varlet"
    ]
  },
  "stylelint": {
    "extends": [
      "@varlet/stylelint-config"
    ],
    "ignoreFiles": [
      "lib/**",
      "es/**",
      "umd/**",
      "site/**",
      "coverage/**",
      "public/**",
      "highlight/**",
      ".varlet/**"
    ]
  },
  "browserslist": [
    "Chrome >= 54",
    "iOS >= 10"
  ],
  "packageManager": "pnpm@7.9.0"
}
