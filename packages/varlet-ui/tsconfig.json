{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "isolatedModules": true
  }
}
